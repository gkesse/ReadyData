<?xml version='1.0' encoding='UTF-8'?>
<rdv>
    <settings>
        <appname>ReadyMDI</appname>
        <width>350</width>
        <height>350</height>
        <logo>readydev.png</logo>
        <windowflag>QT_TOOL</windowflag>
        <about>
            <id>24</id>
            <text><![CDATA[about]]></text>
        </about>
    </settings>
    <untitled>
        <name>document</name>
        <extension>txt</extension>
    </untitled>
    <menus>
        <menu>
            <name>Fichier</name>
            <id>1</id>
            <toolbar>1</toolbar>
            <submenus>
                <submenu>
                    <name>Nouveau</name>
                    <id>4</id>
                    <key>file/new</key>
                    <icon>new.png</icon>
                    <shortcut>Ctrl+N</shortcut>
                    <toolbar>1</toolbar>
                    <statustip>Créer un nouveau fichier</statustip>
                </submenu>
                <submenu>
                    <name>Ouvrir...</name>
                    <id>5</id>
                    <key>file/open</key>
                    <icon>open.png</icon>
                    <shortcut>Ctrl+O</shortcut>
                    <toolbar>1</toolbar>
                    <statustip>Ouvrir un fichier existant</statustip>
                </submenu>
                <submenu>
                    <name>Enregistrer</name>
                    <id>6</id>
                    <key>file/save</key>
                    <icon>save.png</icon>
                    <shortcut>Ctrl+S</shortcut>
                    <toolbar>1</toolbar>
                    <ctrl>1</ctrl>
                    <statustip>Enregistrer le document sur le disque</statustip>
                </submenu>
                <submenu>
                    <name>Enregistrer sous...</name>
                    <id>7</id>
                    <key>file/saveas</key>
                    <ctrl>1</ctrl>
                    <statustip>Enregistrer le document sous un nouveau nom</statustip>
                </submenu>
                <submenu>
                    <separator>1</separator>
                </submenu>
                <submenu>
                    <menu>
                        <name>Fichiers récents...</name>
                        <id>8</id>
                        <key>file/recent</key>
                        <ctrl>1</ctrl>
                        <recentfile>
                            <max>5</max>
                            <key>file/recent/max</key>
                            <ctrl>1</ctrl>
                        </recentfile>
                    </menu>
                </submenu>
                <submenu>
                    <separator>1</separator>
                    <key>file/recent/separator</key>
                    <ctrl>1</ctrl>
                </submenu>
                <submenu>
                    <name>Changer le sens de la disposition</name>
                    <id>17</id>
                    <key>file/switch/layout</key>
                    <statustip>Changer le sens de la disposition</statustip>
                </submenu>
                <submenu>
                    <separator>1</separator>
                </submenu>
                <submenu>
                    <name>Quitter</name>
                    <id>10</id>
                    <key>file/exit</key>
                    <statustip>Quitter l'application</statustip>
                </submenu>
            </submenus>
        </menu>
        <menu>
            <name>Edition</name>
            <id>2</id>
            <toolbar>1</toolbar>
            <submenus>
                <submenu>
                    <name>Couper</name>
                    <id>11</id>
                    <key>edit/cut</key>
                    <icon>cut.png</icon>
                    <shortcut>Ctrl+X</shortcut>
                    <toolbar>1</toolbar>
                    <ctrl>1</ctrl>
                    <statustip>Couper le contenu de la selection courante dans le presse-papier</statustip>
                </submenu>
                <submenu>
                    <name>Copier</name>
                    <id>12</id>
                    <key>edit/copy</key>
                    <icon>copy.png</icon>
                    <shortcut>Ctrl+C</shortcut>
                    <toolbar>1</toolbar>
                    <ctrl>1</ctrl>
                    <statustip>Copier le contenu de la selection courante dans le presse-papier</statustip>
                </submenu>
                <submenu>
                    <name>Coller</name>
                    <id>13</id>
                    <key>edit/paste</key>
                    <icon>paste.png</icon>
                    <shortcut>Ctrl+V</shortcut>
                    <toolbar>1</toolbar>
                    <ctrl>1</ctrl>
                    <statustip>Coller le contenu du presse-papier dans la selection courante</statustip>
                </submenu>
            </submenus>
        </menu>
        <menu>
            <name>Fenêtre</name>
            <id>18</id>
            <submenus>
                <submenu>
                    <name>Fermer</name>
                    <id>9</id>
                    <key>window/close</key>
                    <ctrl>1</ctrl>
                   <statustip>Fermer la fenêtre active</statustip>
                </submenu>
                <submenu>
                    <name>Fermer Tout</name>
                    <id>19</id>
                    <key>window/close/all</key>
                    <ctrl>1</ctrl>
                    <statustip>Fermer toutes les fenêtres</statustip>
                </submenu>
                <submenu>
                    <separator>1</separator>
                </submenu>
                <submenu>
                    <name>Affichage en carreau</name>
                    <id>20</id>
                    <key>window/tile</key>
                    <ctrl>1</ctrl>
                    <statustip>Affichage en carreau</statustip>
                </submenu>
                <submenu>
                    <name>Affichage en cascade</name>
                    <id>21</id>
                    <key>window/cascade</key>
                    <ctrl>1</ctrl>
                    <statustip>Affichage en cascade</statustip>
                </submenu>
                <submenu>
                    <separator>1</separator>
                </submenu>
                <submenu>
                    <name>Suivant</name>
                    <id>22</id>
                    <key>window/next</key>
                    <shortcut>Ctrl+Tab</shortcut>
                    <ctrl>1</ctrl>
                    <statustip>Déplacer le focus vers la fenêtre suivante</statustip>
                </submenu>
                <submenu>
                    <name>Précédent</name>
                    <id>23</id>
                    <key>window/previous</key>
                    <shortcut>Ctrl+Shift+Backtab</shortcut>
                    <ctrl>1</ctrl>
                    <statustip>Déplacer le focus vers la fenêtre précédente</statustip>
                </submenu>
            </submenus>
        </menu>
        <menu>
            <name>Aide</name>
            <id>3</id>
            <submenus>
                <submenu>
                    <name>À propos de ReadyMDI</name>
                    <id>14</id>
                    <key>help/app</key>
                    <statustip>À propos de ReadyMDI</statustip>
                </submenu>
                <submenu>
                    <name>À propos de Qt</name>
                    <id>15</id>
                    <key>help/qt</key>
                    <statustip>À propos de Qt</statustip>
                </submenu>
                <submenu>
                    <menu>
                        <name>Langue</name>
                        <key>help/language</key>
                        <id>16</id>
                        <group>1</group>
                        <index>1</index>
                        <indexctrl>1</indexctrl>
                        <submenus>
                            <submenu>
                                <name>Français</name>
                                <groupid>1</groupid>
                                <key>help/language/fr</key>
                            </submenu>
                            <submenu>
                                <name>English</name>
                                <groupid>2</groupid>
                                <key>help/language/en</key>
                            </submenu>
                        </submenus>
                    </menu>
                </submenu>
            </submenus>
        </menu>
    </menus>
    <recentfiles/>
</rdv>
